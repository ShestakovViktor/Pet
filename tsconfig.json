{
	"compilerOptions": {
		"target": "es2017",
		"module": "CommonJs",
		"outDir": "./build",
		"rootDir": "./src",
		"strict": true,
		"jsx": "react",
		"strictNullChecks": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
            "es6",
            "dom",
			"es2020.string"
        ],
		"downlevelIteration": true,
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,

		"baseUrl": "./src",

		"paths": {
			"@core": ["core"], 
			"@core/*": ["core/*"],

			"@module": ["core/module"], 
			"@module/*": ["core/module/*"],

			"@driver": ["core/driver"], 
			"@driver/*": ["core/driver/*"],

			"@math": ["core/math"], 
			"@math/*": ["core/math/*"],

			"@gui": ["gui"], 
			"@gui/*": ["gui/*"],
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.d.ts"
	],
	"exclude": ["**/*.js"],
	"watchOptions": {
		"watchDirectory": "useFsEvents"
	},
}
